{
    "env": {
        "browser": true,
        "es6": true,
        "jest/globals": true
    },
    "extends": ["plugin:react/recommended", "standard"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "settings": {
        "react": {
            "version": "18.2.0"
        }
    },
    "plugins": ["react","jest"],
    "rules": {
        "semi": [2, "always"],
        "space-before-function-paren": [
            0,
            { "anonymous": "always", "named": "always" }
        ],
        "camelcase": 0,
        "no-return-assign": 0,
        "react/react-in-jsx-scope": "off",
        "react/jsx-uses-react": "off"
    }
}
